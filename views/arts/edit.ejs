		<header class="masthead text-center text-white">
			<div class="content">
				<h1 style="text-align: center">Edit <%= art.name%></h1>
			</div>
		</header> 
		
		
		<!-- Grid row -->
		<div class = "row">
			<div style="width: 60%; margin: 0 auto">
				<form action="/arts/<%= art._id %>?_method=PUT" method="POST">
					<!-- Grid column -->
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="art[name]" value="<%= art.name %>">
							<label for="formInfo1">Artwork Name</label>
						</div>
					</div>
					<!-- Grid column -->
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="art[image]" value="<%= art.image %>">
							<label for="formInfo2">Artwork Image URL</label>
						</div>
					</div>
					<!-- Grid column -->
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="art[info]" value="<%= art.info %>">
							<label for="formInfo3">Artwork Information</label>
						</div>
					</div>
					<!-- Grid column -->
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="art[museum]" value="<%= art.museum %>">
							<label for="formInfo4">Present Museum</label>
						</div>
					</div>
					<!-- Grid column -->
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="location" value="<%= art.location %>">
							<label for="location">Location</label>
						</div>
					</div>
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="number" name = "art[ticket]" value="<%= art.ticket %>" step="0.1" min="0">
							<label for="formInfo4">Museum Tickets</label>
						</div>
					</div>
					<div class="col-md-12">
						<!-- Material input -->
						<div class="md-form form-group">
							<input class="form-control" type="text" name="art[museumimage]" value="<%= art.museumimage %>">
							<label for="formInfo2">Artwork Present Image URL</label>
						</div>
					</div>
					<div class="col-md-12">
							<button type="submit" class="button button-block rounded-pill mt-5">Submit</button>
					</div>
				</form>
				<a href="/arts" class="btn btn-primary rounded-pill mt-5">Go Back</a>
			</div>
		</div>
		
